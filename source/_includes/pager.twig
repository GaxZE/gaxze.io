<div class="post-pager is-flex">
    {% if page.pagination.previous_page %}
    <div class="is-half">
        <a href="{{ page.previous_post.url }}">
            <a class="previous" href="{{ site.url }}{{ page.pagination.previous_page.url }}" title="Previous Page"><span class="title">&laquo; previous</span></a>
        </a>
    </div>
    {% endif %}

    {% if page.pagination.next_page %}
    <div class="is-half text-right">
        <a href="{{ page.next_post.url }}">
            <a class="next" href="{{ site.url }}{{ page.pagination.next_page.url }}" title="Next Page"><span class="title">next &raquo;</span></a>
        </a>
    </div>
    {% endif %}
</div>