<div class="post-meta">
    <div class="col-xs-6 col-sm-6 col-lg-8 posted">
        <time itemprop="datePublished" content="{{ post.date|date('jS. F. Y') }}" datetime="{{ post.date|date('jS. M. Y') }}">
            <span class="day">{{ post.date|date('jS') }}</span>&nbsp;<span class="month">{{ post.date|date('F') }}</span>&nbsp;<span class="year">{{ post.date|date('Y') }}</span>
        </time>
    </div>
    {% if page.tags %}
        {% set postMeta = page.tags %}
    {% else %}
        {% set postMeta = post.meta.tags %}
    {% endif %}
    {% if postMeta %}
        <div class="col-xs-6 col-lg-4 tags text-right">
            <i class="fa fa-tags"></i>
            {% for tag in postMeta %}
                <a href="{{ site.url }}/blog/tags/{{ tag|url_encode(true) }}">{{ tag }}</a>{% if not loop.last %}, {% endif %}
            {% endfor %}
        </div>
    {% endif %}
</div>
